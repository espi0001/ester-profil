---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Topknap from "../components/Topknap.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <!-- europæisk sprog -->
    <meta charset="utf-8" />

    <!-- Det eks hvis man bruger safari - så browser ser ens ud-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Fortæller at det er et pesponsivt site -->
    <meta name="viewport" content="width=device-width" />

    <!-- SEO metadata -->
    <meta name="description" content="Ester Piazza-Koldbye Profil" />
    <meta name="author" content="Ester Piazza-Koldbye" />
    <meta name="copyright" content="Ester Piazza-Koldbye" />

    <!-- Den kommer ikke frem hos søgemaskiner -->
    <meta name="robots" content="noindex, nofollow" />

    <!-- fa-icon -->
    <link rel="icon" type="image/svg+xml" href="/logo/LogoBlack.svg" />

    <!-- Roboto font  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />

    <!-- Sætter generator meta tag til at angive hvilken værktøj der blev brugt til at generere siden -->
    <meta name="generator" content={Astro.generator} />

    <!-- titel på siden (sidetitel) -->
    <title>{title}</title>
  </head>
  <body id="top">
    <Navigation />
    <main>
      <slot />
      <Topknap />
    </main>

    <Footer />
  </body>
</html>
